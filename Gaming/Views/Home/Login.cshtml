@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>
<html>

<head>
	<meta charset="UTF-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link rel="stylesheet" href="~/css/Home/login.css">
	<title>Nısancı.net|Login</title>
</head>

<body>
	<div id="logo-img">
		<img src="~/Images/logo.jpg" alt="logo" width="210px">
		<h2>NISANCI.NET</h2>
	</div>
	<!--form type account-->
	<div id="formInfo">
		@model Gaming.Model.CheckLogin
		<form asp-action="Login" asp-controller="Home" method="post">
			<input asp-for="login_mail" text="formStyle" class="formStyle" placeholder="Email or Phone"><br>
			<span></span><br />
			<input asp-for="login_password" type="password" class="formStyle" placeholder="Password"><br>
			<span style="color:red;">@ViewBag.login</span> <br />
			<button id="formButton">Log In</button><br>

		</form>

		<!--line bottom (hr)-->
		<div id="withAccount">
			<hr>
			<p> Or log in with </p>
			<hr>
		</div>


	</div>

	<!-- different account icons-->
	<div id="accountIcon">

		<a href="facebook.com"><img src="https://img.icons8.com/fluency/64/000000/facebook-new.png" /></a>

		<a href="google.com"> <img src="https://img.icons8.com/color/64/000000/google-logo.png" /></a>

		<a href="apple.com"> <img src="https://img.icons8.com/office/64/000000/mac-os.png" /></a>

	</div>

	<!-------------------------->

	<div id="registerAcoount">
		<a href="~/Register/Register1"> Create a free Nısancı.net Account </a>
	</div>


</body>

</html>